<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net9.0-windows</TargetFramework>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <!-- ðŸ§± Single-file build -->
    <PublishSingleFile>true</PublishSingleFile>

    <!-- ðŸ“¦ Bundle everything, including native libraries -->
    <IncludeAllContentForSelfExtract>true</IncludeAllContentForSelfExtract>

    <!-- ðŸš« Donâ€™t trim (WinForms not compatible with trimming) -->
    <PublishTrimmed>false</PublishTrimmed>

    <!-- ðŸ”§ Bundle all dependencies into the exe -->
    <SelfContained>true</SelfContained>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>

    <!-- ðŸ§© Optional: compress the bundle to reduce size -->
    <EnableCompressionInSingleFile>true</EnableCompressionInSingleFile>
  </PropertyGroup>

</Project>